script.
  $('.setting-actions').click(() => {
  // Open the setting panel
  $(".setting-panel").addClass("opened");
  });
  $(".setting-panel .close-icon").click(() => {
  // Close the setting panel
  $(".setting-panel").removeClass("opened");
  });
  $('.background-panel .color').click(function(evt) {
  // Setting the background color
  const color = $(this).data('value');
  if (color) {
  $('.container').html(``);
  $('.container').css('background-color', color);
  }
  });
  $('.background-panel .image').click((evt) => {
  // Setting the background image
  const image = evt.target.src;
  if (image) {
  $('.container').html(`<img src="${image}" />`)
  }
  });
